@model AvcolMusicIdentity.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HomeRoom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HomeRoom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MusicTimetables)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Music Teacher</th>
                    <th>Instrument</th>
                    <th>Day</th>
                </tr>
                @foreach (var item in Model.MusicTimetables)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Group.Teacher.Firstname)
                            @Html.DisplayFor(modelItem => item.Group.Teacher.Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Group.Instrument)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Group.Day)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.StudentID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
